@model IEnumerable<NBP_1_2.Models.FootballTeam>
@{
    ViewData["Title"] = "Football Teams";
}

<h1>Football Teams</h1>

<p>
    <a asp-action="Add">Add a new team</a>
</p>

<form asp-controller="FootballTeam"  asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="teamName" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.homeTown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stadiumName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.homeTown)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stadiumName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Info" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/notification_min.js"></script>


@model NBP_1_2.Models.Player

@{
    ViewData["Title"] = "Info about My Team";
}

<h1>Info</h1>

<hr />


<form class="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p>
        Player ID: <input type="text" name="id" />
        <input type="submit" value="Add To Team" asp-action="AddToTeam" />
    </p>
</form>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="money" class="control-label"></label>
                <input asp-for="money" class="form-control" disabled="true"/>
                <span asp-validation-for="money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="score" class="control-label"></label>
                <input asp-for="score" class="form-control" disabled="true"/>
                <span asp-validation-for="score" class="text-danger"></span>
            </div>
            
        </form>
    </div>
    <table class="table">
    <thead>
        <tr>
            <th>
                Player Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.inTeam) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
 
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/notification.js"></script>

